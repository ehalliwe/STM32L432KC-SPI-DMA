/* USER CODE BEGIN 4 */
void HAL_SPI_RxCpltCallback(SPI_HandleTypeDef * hspi)
{
    HAL_SPI_Receive_IT(&hspi3, RX_Buffer, BUFFER_SIZE);
    HAL_UART_Transmit_IT(&huart2, RX_Buffer, BUFFER_SIZE);
}
/* USER CODE END 4 */

